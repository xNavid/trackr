<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to image_tag('/trackr-logo.png'), root_path, class: "navbar-brand" %>
    <%= link_to "Trackr", root_path, class: "navbar-brand" %>
    <% if current_user %>
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Portfolio", my_portfolio_path  %></li>
          <li><%= link_to "Link3", "/path3"  %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.full_name.present? ? current_user.full_name : current_user.email %>  <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", edit_registration_path(current_user)  %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to("Sign Out", destroy_user_session_path, method: :delete) %></li>
            </ul>
          </li>
        </ul>
      </div>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign In", new_session_path(resource_name), class: "signin button" %></li> 
        <li><%= link_to "Sign Up", new_registration_path(resource_name), class: "signup button" %></li> 
      </ul>
      
    <% end %>
  </div>
</div>